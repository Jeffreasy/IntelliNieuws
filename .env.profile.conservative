# CONSERVATIVE Profile - Respectful Scraping, Minimal Load
# Purpose: Minimal server impact, maximum respect
# Interval: 30 minutes

# Server Configuration  
API_PORT=8083
SCRAPER_PORT=8084
ENV=docker

# Database Configuration (shared)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=scraper
POSTGRES_PASSWORD=scraper_password
POSTGRES_DB=nieuws_scraper
POSTGRES_SSL_MODE=disable

# Redis Configuration (shared)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=0
REDIS_POOL_SIZE=20                      # Smaller pool
REDIS_MIN_IDLE_CONNS=5
CACHE_DEFAULT_TTL_MINUTES=15
CACHE_COMPRESSION_THRESHOLD=1024

# Scraper Configuration - CONSERVATIVE PROFILE
SCRAPER_USER_AGENT=NieuwsScraper-Conservative/3.0
SCRAPER_RATE_LIMIT_SECONDS=10          # Very respectful
SCRAPER_MAX_CONCURRENT=2               # Low parallel
SCRAPER_TIMEOUT_SECONDS=60             # Patient
SCRAPER_RETRY_ATTEMPTS=2               # Limited retries
SCRAPER_SCHEDULE_ENABLED=true
SCRAPER_SCHEDULE_INTERVAL_MINUTES=30   # Every 30 minutes

# Target Sites - Limited to most important
TARGET_SITES=nu.nl,nos.nl

# Feature Flags - Maximum respect
ENABLE_RSS_PRIORITY=true
ENABLE_DYNAMIC_SCRAPING=false
ENABLE_ROBOTS_TXT_CHECK=true           # Strict checking
ENABLE_DUPLICATE_DETECTION=true

# Logging - Minimal
LOG_LEVEL=warn
LOG_FORMAT=json

# Content Extraction - Minimal
ENABLE_FULL_CONTENT_EXTRACTION=false
CONTENT_EXTRACTION_ASYNC=false

# Browser Scraping - Minimal usage
ENABLE_BROWSER_SCRAPING=true
BROWSER_POOL_SIZE=2                     # Small pool
BROWSER_TIMEOUT_SECONDS=20
BROWSER_WAIT_AFTER_LOAD_MS=2000
BROWSER_FALLBACK_ONLY=true
BROWSER_MAX_CONCURRENT=1                # Serial processing

# AI Processing - Basic only
AI_ENABLED=true
AI_ASYNC_PROCESSING=true
AI_BATCH_SIZE=5                         # Small batches
AI_PROCESS_INTERVAL_MINUTES=10          # Less frequent
AI_RETRY_FAILED=false                   # No retries
AI_MAX_RETRIES=1
AI_ENABLE_SENTIMENT=true
AI_ENABLE_ENTITIES=false                # Disabled
AI_ENABLE_CATEGORIES=true
AI_ENABLE_KEYWORDS=false                # Disabled
AI_ENABLE_SUMMARY=false                 # Disabled
AI_ENABLE_SIMILARITY=false
AI_MAX_DAILY_COST=5.0                   # Lower budget
AI_RATE_LIMIT_PER_MINUTE=30             # Lower rate
AI_TIMEOUT_SECONDS=20
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500                   # Minimal tokens

# Stock API - Disabled for resource saving
STOCK_API_KEY=

# Email - Disabled
EMAIL_ENABLED=false

# API Configuration
API_RATE_LIMIT_REQUESTS=50              # Conservative API limits
API_RATE_LIMIT_WINDOW_SECONDS=60
API_TIMEOUT_SECONDS=30
API_KEY_HEADER=X-API-Key
API_KEY=test123geheim
ENABLE_METRICS=true
METRICS_PORT=9093