# DEEP Profile - Quality Extraction, Comprehensive Content
# Purpose: Maximum content quality, full extraction
# Interval: 60 minutes

# Server Configuration
API_PORT=8082
SCRAPER_PORT=8083
ENV=docker

# Database Configuration (shared)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=scraper
POSTGRES_PASSWORD=scraper_password
POSTGRES_DB=nieuws_scraper
POSTGRES_SSL_MODE=disable

# Redis Configuration (shared)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=0
REDIS_POOL_SIZE=30
REDIS_MIN_IDLE_CONNS=10
CACHE_DEFAULT_TTL_MINUTES=10
CACHE_COMPRESSION_THRESHOLD=1024

# Scraper Configuration - DEEP PROFILE
SCRAPER_USER_AGENT=NieuwsScraper-Deep/3.0
SCRAPER_RATE_LIMIT_SECONDS=5
SCRAPER_MAX_CONCURRENT=3
SCRAPER_TIMEOUT_SECONDS=60           # More time for thorough extraction
SCRAPER_RETRY_ATTEMPTS=5             # More retries
SCRAPER_SCHEDULE_ENABLED=true
SCRAPER_SCHEDULE_INTERVAL_MINUTES=60 # Every hour

# Target Sites - Extended sources
TARGET_SITES=nu.nl,ad.nl,nos.nl,trouw.nl,volkskrant.nl

# Feature Flags - All features enabled
ENABLE_RSS_PRIORITY=true
ENABLE_DYNAMIC_SCRAPING=true
ENABLE_ROBOTS_TXT_CHECK=true
ENABLE_DUPLICATE_DETECTION=true

# Logging - Detailed
LOG_LEVEL=debug
LOG_FORMAT=json

# Content Extraction - AGGRESSIVE
ENABLE_FULL_CONTENT_EXTRACTION=true
CONTENT_EXTRACTION_INTERVAL_MINUTES=5    # Frequent
CONTENT_EXTRACTION_BATCH_SIZE=20         # Large batches
CONTENT_EXTRACTION_ASYNC=true

# Browser Scraping - MAXIMUM QUALITY
ENABLE_BROWSER_SCRAPING=true
BROWSER_POOL_SIZE=7                     # Large pool
BROWSER_TIMEOUT_SECONDS=30              # More time
BROWSER_WAIT_AFTER_LOAD_MS=3000         # Full rendering
BROWSER_FALLBACK_ONLY=false             # Always use browser
BROWSER_MAX_CONCURRENT=4

# AI Processing - FULL FEATURES
AI_ENABLED=true
AI_ASYNC_PROCESSING=true
AI_BATCH_SIZE=15                        # Larger batches
AI_PROCESS_INTERVAL_MINUTES=3           # Frequent
AI_RETRY_FAILED=true
AI_MAX_RETRIES=5                        # More retries
AI_ENABLE_SENTIMENT=true
AI_ENABLE_ENTITIES=true
AI_ENABLE_CATEGORIES=true
AI_ENABLE_KEYWORDS=true
AI_ENABLE_SUMMARY=true
AI_ENABLE_SIMILARITY=true               # Enable similarity
AI_MAX_DAILY_COST=20.0                  # Higher budget
AI_RATE_LIMIT_PER_MINUTE=60
AI_TIMEOUT_SECONDS=45                   # More time
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1500                  # More tokens

# Stock API - Full coverage
STOCK_API_PROVIDER=fmp
STOCK_API_KEY=YOUR_FMP_API_KEY_HERE
STOCK_API_CACHE_TTL_MINUTES=10
STOCK_API_RATE_LIMIT_PER_MINUTE=30
STOCK_API_TIMEOUT_SECONDS=15
STOCK_API_ENABLE_CACHE=true

# Email Integration - Disabled (balanced handles this)
EMAIL_ENABLED=false

# API Configuration
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW_SECONDS=60
API_TIMEOUT_SECONDS=60
API_KEY_HEADER=X-API-Key
API_KEY=test123geheim
ENABLE_METRICS=true
METRICS_PORT=9092