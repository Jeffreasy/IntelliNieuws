# BALANCED Profile - Normal Operations (Current Production)
# Purpose: Good balance between speed and respect
# Interval: 15 minutes

# Server Configuration
API_PORT=8080
SCRAPER_PORT=8081
ENV=docker

# Database Configuration (shared)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=scraper
POSTGRES_PASSWORD=scraper_password
POSTGRES_DB=nieuws_scraper
POSTGRES_SSL_MODE=disable

# Redis Configuration (shared)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=0
REDIS_POOL_SIZE=30
REDIS_MIN_IDLE_CONNS=10
CACHE_DEFAULT_TTL_MINUTES=5
CACHE_COMPRESSION_THRESHOLD=1024

# Scraper Configuration - BALANCED PROFILE (v3.0 OPTIMIZED)
SCRAPER_USER_AGENT=NieuwsScraper-Balanced/3.0
SCRAPER_RATE_LIMIT_SECONDS=3
SCRAPER_MAX_CONCURRENT=5
SCRAPER_TIMEOUT_SECONDS=30
SCRAPER_RETRY_ATTEMPTS=3
SCRAPER_SCHEDULE_ENABLED=true
SCRAPER_SCHEDULE_INTERVAL_MINUTES=15

# Target Sites - All sources
TARGET_SITES=nu.nl,ad.nl,nos.nl

# Feature Flags - Balanced approach
ENABLE_RSS_PRIORITY=true
ENABLE_DYNAMIC_SCRAPING=true
ENABLE_ROBOTS_TXT_CHECK=true
ENABLE_DUPLICATE_DETECTION=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Content Extraction - Enabled
ENABLE_FULL_CONTENT_EXTRACTION=true
CONTENT_EXTRACTION_INTERVAL_MINUTES=10
CONTENT_EXTRACTION_BATCH_SIZE=15
CONTENT_EXTRACTION_ASYNC=true

# Browser Scraping - Optimized pool
ENABLE_BROWSER_SCRAPING=true
BROWSER_POOL_SIZE=5
BROWSER_TIMEOUT_SECONDS=15
BROWSER_WAIT_AFTER_LOAD_MS=1500
BROWSER_FALLBACK_ONLY=true
BROWSER_MAX_CONCURRENT=3

# AI Processing - Full features
AI_ENABLED=true
AI_ASYNC_PROCESSING=true
AI_BATCH_SIZE=10
AI_PROCESS_INTERVAL_MINUTES=5
AI_RETRY_FAILED=true
AI_MAX_RETRIES=3
AI_ENABLE_SENTIMENT=true
AI_ENABLE_ENTITIES=true
AI_ENABLE_CATEGORIES=true
AI_ENABLE_KEYWORDS=true
AI_ENABLE_SUMMARY=true
AI_ENABLE_SIMILARITY=false
AI_MAX_DAILY_COST=10.0
AI_RATE_LIMIT_PER_MINUTE=60
AI_TIMEOUT_SECONDS=30
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000

# Stock API
STOCK_API_PROVIDER=fmp
STOCK_API_KEY=YOUR_FMP_API_KEY_HERE
STOCK_API_CACHE_TTL_MINUTES=5
STOCK_API_RATE_LIMIT_PER_MINUTE=30
STOCK_API_TIMEOUT_SECONDS=10
STOCK_API_ENABLE_CACHE=true

# Email Integration
EMAIL_ENABLED=true
EMAIL_HOST=outlook.office365.com
EMAIL_PORT=993
EMAIL_USERNAME=YOUR_EMAIL@outlook.com
EMAIL_PASSWORD=YOUR_EMAIL_PASSWORD_HERE
EMAIL_USE_TLS=true
EMAIL_ALLOWED_SENDERS=noreply@x.ai
EMAIL_POLL_INTERVAL_MINUTES=5
EMAIL_MAX_RETRIES=3
EMAIL_RETRY_DELAY_SECONDS=5
EMAIL_MARK_AS_READ=true
EMAIL_DELETE_AFTER_READ=false
EMAIL_FETCH_EXISTING=true
EMAIL_MAX_DAYS_BACK=30

# API Configuration
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW_SECONDS=60
API_TIMEOUT_SECONDS=30
API_KEY_HEADER=X-API-Key
API_KEY=test123geheim
ENABLE_METRICS=true
METRICS_PORT=9090