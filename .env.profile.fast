# FAST Profile - Breaking News, High Frequency
# Purpose: Quick updates, maximum throughput
# Interval: 5 minutes

# Server Configuration
API_PORT=8081
SCRAPER_PORT=8082
ENV=docker

# Database Configuration (shared)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=scraper
POSTGRES_PASSWORD=scraper_password
POSTGRES_DB=nieuws_scraper
POSTGRES_SSL_MODE=disable

# Redis Configuration (shared)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=0
REDIS_POOL_SIZE=30
REDIS_MIN_IDLE_CONNS=10
CACHE_DEFAULT_TTL_MINUTES=2
CACHE_COMPRESSION_THRESHOLD=1024

# NATS Configuration
NATS_URL=nats://localhost:4222

# Scraper Configuration - FAST PROFILE
SCRAPER_USER_AGENT=NieuwsScraper-Fast/3.0
SCRAPER_RATE_LIMIT_SECONDS=2          # Aggressive
SCRAPER_MAX_CONCURRENT=10             # Maximum parallel
SCRAPER_TIMEOUT_SECONDS=15            # Quick timeout
SCRAPER_RETRY_ATTEMPTS=2              # Less retries
SCRAPER_SCHEDULE_ENABLED=true
SCRAPER_SCHEDULE_INTERVAL_MINUTES=5   # Every 5 minutes!

# Target Sites - Breaking news only
TARGET_SITES=nu.nl

# Feature Flags - Optimized for speed
ENABLE_RSS_PRIORITY=true
ENABLE_DYNAMIC_SCRAPING=false
ENABLE_ROBOTS_TXT_CHECK=false         # Skip for speed
ENABLE_DUPLICATE_DETECTION=true       # Still needed

# Logging
LOG_LEVEL=warn
LOG_FORMAT=json

# Content Extraction - Minimal (focus on speed)
ENABLE_FULL_CONTENT_EXTRACTION=false
CONTENT_EXTRACTION_ASYNC=false

# Browser Scraping - Large pool for speed
ENABLE_BROWSER_SCRAPING=true
BROWSER_POOL_SIZE=10
BROWSER_TIMEOUT_SECONDS=10
BROWSER_WAIT_AFTER_LOAD_MS=1000       # Minimal wait
BROWSER_FALLBACK_ONLY=true
BROWSER_MAX_CONCURRENT=5

# AI Processing - Disabled for speed
AI_ENABLED=false

# Email - Disabled
EMAIL_ENABLED=false

# Stock API - Disabled
STOCK_API_KEY=

# API Configuration
API_RATE_LIMIT_REQUESTS=200
API_RATE_LIMIT_WINDOW_SECONDS=60
API_TIMEOUT_SECONDS=15
API_KEY_HEADER=X-API-Key
API_KEY=test123geheim
ENABLE_METRICS=true
METRICS_PORT=9091